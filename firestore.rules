rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /products/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /seasons/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /shippingCompanies/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{id} {
      allow create: if true;   // العميل ينشئ طلب
      allow read, update, delete: if isAdmin(); // الأدمن يدير الطلبات
    }

    match /settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
